{
  "manifest_version": 3,
  "name": "Redbook Tools",
  "version": "1.0.0",
  "description": "小红书工具集 - 提供更好的使用体验",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.xiaohongshu.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Redbook Tools"
  },
  "content_scripts": [
    {
      "matches": ["https://*.xiaohongshu.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}